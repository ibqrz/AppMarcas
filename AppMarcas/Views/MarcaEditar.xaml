<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMarcas.Views.MarcaEditar"
             Title="{Binding None}">
    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Label x:Name="lblMarId" Text="ID:"/>
            <Entry x:Name="txtMarId" Text="{Binding marId}"/>

            <Label x:Name="lblMarNome" Text="Nome:"/>
            <Entry x:Name="txtMarNome" IsEnabled="True" Text="{Binding marNome }"/>

            <Button x:Name="btnAlterar" Text="Alterar" Clicked="btnAlterarOnClicked"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>